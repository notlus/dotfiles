{
  "title": "App Layer",
  "rules": [
    {
      "description": "[A]pp Layer",
      "manipulators": [
        {
          "conditions": [
            {
              "name": "hyper",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "a"
          },
          "to": [
            {
              "set_variable": {
                "name": "app_layer_active",
                "value": 1
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "app_layer_active",
                  "value": 0
                }
              }
            ]
          },
          "parameters": {
            "basic.to_delayed_action_delay_milliseconds": 1000
          },
          "type": "basic"
        }
      ]
    },
    {
      "description": "App Commands",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "app_layer_active",
              "value": 1
            }
          ],
          "description": "Open Brave",
          "from": {
            "key_code": "b"
          },
          "to": [
            {
              "shell_command": "open -a 'Brave Browser.app'"
            },
            {
              "set_variable": {
                "name": "app_layer_active",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
