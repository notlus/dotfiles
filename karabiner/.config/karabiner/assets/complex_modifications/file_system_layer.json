{
  "title": "File System Layer",
  "rules": [
    {
      "description": "[F]ile System Layer",
      "manipulators": [
        {
          "conditions": [
            {
              "name": "hyper",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "finder_layer_active",
                "value": 1
              }
            },
            {
              "set_notification_message": {
                "id": "org.pqrs.app_layer",
                "text": "Finder Layer Activated"
              }
            }
          ],
          "to_delayed_action": {
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "finder_layer_active",
                  "value": 0
                }
              },
              {
                "key_code": "f"
              },
              {
                "set_notification_message": {
                  "id": "org.pqrs.app_layer",
                  "text": ""
                }
              }
            ],
            "to_if_invoked": [
              {
                "set_notification_message": {
                  "id": "org.pqrs.app_layer",
                  "text": ""
                }
              }
            ]
          },
          "type": "basic"
        }
      ]
    },
    {
      "description": "Finder Commands",
      "manipulators": [
        {
          "conditions": [
            {
              "name": "finder_layer_active",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Open Finder",
          "from": {
            "key_code": "h"
          },
          "to": [
            {
              "shell_command": "open -a 'Finder.app'"
            },
            {
              "set_variable": {
                "name": "finder_layer_active",
                "value": 0
              }
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "finder_layer_active",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Open Downloads",
          "from": {
            "key_code": "d"
          },
          "to": [
            {
              "shell_command": "open -a 'Finder.app' ~/Downloads/"
            },
            {
              "set_variable": {
                "name": "finder_layer_active",
                "value": 0
              }
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "finder_layer_active",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Open dev (Source)",
          "from": {
            "key_code": "s"
          },
          "to": [
            {
              "shell_command": "open -a 'Finder.app' ~/dev"
            },
            {
              "set_variable": {
                "name": "finder_layer_active",
                "value": 0
              }
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
